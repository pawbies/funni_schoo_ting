<div class="space-y-6">
  <!-- Section: Archived Borrowed Books -->
  <div class="bg-white p-6 rounded shadow-md">
    <h2 class="text-lg font-bold mb-4 text-blue-700">Archived Borrowed Books</h2>
    <% if @books.any? %>
      <table class="w-full table-auto border-collapse">
        <thead>
          <tr class="bg-gray-100 text-left">
            <th class="border p-2">Book</th>
            <th class="border p-2">Borrower</th>
            <th class="border p-2">Librarian</th>
            <th class="border p-2">Borrow Date</th>
            <th class="border p-2">Return Date</th>
            <th class="border p-2">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |borrow| %>
            <tr>
              <td class="border p-2"><%= link_to borrow.book.name, borrow.book %></td>
              <td class="border p-2"><%= "#{borrow.lastname} #{borrow.firstname}" %></td>
              <td class="border p-2"><%= "#{borrow.user.lastname} #{borrow.user.firstname}" %></td>
              <td class="border p-2"><%= borrow.borrow_date.strftime("%B %d, %Y") %></td>
              <td class="border p-2"><%= borrow.return_date.strftime("%B %d, %Y") %></td>
              <td class="border p-2">
                <%= link_to 'Edit', edit_borrow_path(borrow), class: "text-blue-500 hover:underline" %> <!-- Edit Link -->
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-gray-500">No books have been returned yet.</p>
    <% end %>
  </div>
</div>
